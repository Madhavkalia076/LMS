<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Course Details</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header>
    <h1>Mini Udemy LMS</h1>
  </header>

  <main class="container">
    <!-- Course Info -->
    <section>
      <h2 id="courseTitle">Loading...</h2>
      <p id="courseDesc"></p>
    </section>

    <!-- Progress -->
    <section>
      <h3>📈 Progress</h3>
      <p id="progressText">Calculating progress...</p>
    </section>

    <!-- Lessons -->
    <section>
      <h3>📚 Lessons</h3>
      <div id="lessonsContainer"></div>
    </section>

    <!-- Quiz -->
    <section>
      <h3>📝 Quiz</h3>
      <form id="quizForm"></form>
      <p id="quizScore"></p>
    </section>
  </main>

  <script src="/js/course.js"></script>
